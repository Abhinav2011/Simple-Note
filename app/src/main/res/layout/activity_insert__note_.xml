<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E8E8"
        android:orientation="vertical"
        tools:context=".Activity.Insert_Note_Activity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <EditText
                android:id="@+id/Add_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:hint="Title"
                android:fontFamily="@font/product_sans_regular"
                android:background="@drawable/edit_text_background"
                android:padding="15dp"


        />
        <EditText
                android:id="@+id/Add_Notes"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="top"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:hint="Note"
                android:fontFamily="@font/product_sans_regular"
                android:background="@drawable/edit_text_background"
                android:padding="15dp"
        />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Priority"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:padding="15dp"/>

            <RadioGroup
                    android:id="@+id/Priority_Group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RadioButton
                        android:id="@+id/High_Priority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:fontFamily="@font/product_sans_regular"
                        android:background="@drawable/edit_text_background"
                        android:layout_marginStart="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        android:padding="15dp"

                />
                <RadioButton
                        android:id="@+id/Medium_Priority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:fontFamily="@font/product_sans_regular"
                        android:background="@drawable/edit_text_background"
                        android:layout_marginStart="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        android:padding="15dp"
                />
                <RadioButton
                        android:id="@+id/Low_Priority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="low"
                        android:fontFamily="@font/product_sans_regular"
                        android:background="@drawable/edit_text_background"
                        android:layout_marginStart="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        android:padding="15dp"
                />
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Done_Note_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="26dp"
            android:backgroundTint="@color/red"
            android:src="@drawable/ic_baseline_done_24"
    />

</RelativeLayout>